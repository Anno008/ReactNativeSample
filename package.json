{
  "name": "TodoApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest --updateSnapshot",
    "coverage": "jest --verbose --coverage --updateSnapshot && start ./coverage/lcov-report/index.html",
    "buildAndroid": "cd android && gradlew assembleRelease"
  },
  "dependencies": {
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-animatable": "^1.3.1",
    "react-native-svg": "^9.1.1",
    "react-navigation": "^3.0.9",
    "react-redux": "^6.0.0",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.16",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "23.3.10",
    "@types/react": "16.7.17",
    "@types/react-native": "0.57.18",
    "@types/react-navigation": "^3.0.1",
    "@types/react-redux": "^6.0.13",
    "@types/react-test-renderer": "16.0.3",
    "@types/redux-persist": "^4.3.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "enzyme-to-json": "^3.3.5",
    "jest": "23.6.0",
    "jest-fetch-mock": "^2.1.0",
    "metro-react-native-babel-preset": "0.48.5",
    "react-dom": "^16.7.0",
    "react-test-renderer": "16.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-react": "^3.6.0",
    "typescript": "3.2.2"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transformIgnorePatterns": [
      "/node_modules/(?!react-navigation)/"
    ],
  
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/__snapshots__/**",
      "!**/*.styles.ts",
      "!**/index.ts",
      "!**/I[A-Z]*.{ts}",
      "src/**"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "./testsSetup/setup.js"
    ]
  }
}
